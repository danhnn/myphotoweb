<p id="notice"><%= notice %></p>

<h1>Listing Photos</h1>
<ul>
  <% @photos.each do |photo| %>
      <div class="card">
        <%= image_tag(photo.url, class:'card-img-top') %>
        <div class="card-block">
          <h4 class="card-title"><%= photo.username %></h4>
          <p class="card-text"></p>
          <%= link_to photo.username, photo_path(photo), class:'btn btn-primary'  %>
        </div>
      </div>

  <% end %>

</ul>

<%= link_to 'New Photo', new_photo_path %>
<%= paginate @photos %>